{
  "tasks": {
    "start": "deno run --unstable-cron --unstable-kv --env --allow-net --allow-env main.ts",
    "dev": "deno run --unstable-cron --unstable-kv --env --watch --allow-net --allow-env main.ts",
    "check": "deno check main.ts src/**/*.ts",
    "test": "deno test --unstable-kv --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "always"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
